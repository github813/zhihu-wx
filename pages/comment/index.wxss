    width: 100%; background: #fff;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 44px;
    line-height: 44px;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}
.swiper-tab-item{
    width: 45%; 
    color:#434343;margin-bottom: -1px;
}
